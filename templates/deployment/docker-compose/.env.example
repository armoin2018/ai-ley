# Environment Configuration
PROJECT_NAME=myapp
NODE_ENV=production
LOG_LEVEL=info
DOMAIN=localhost

# Web Server Configuration
WEB_IMAGE=nginx:alpine
WEB_PORT=80
WEB_SSL_PORT=443

# Application Configuration
APP_IMAGE=myapp:latest
APP_PORT=8080

# Database Configuration
DB_IMAGE=postgres:15-alpine
DB_NAME=myapp
DB_USER=myapp_user
DB_PASSWORD=changeme123
DB_PORT=5432

# Redis Configuration
REDIS_IMAGE=redis:7-alpine
REDIS_PASSWORD=changeme123
REDIS_PORT=6379
REDIS_DB=0

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./secrets/ssl_cert.pem
SSL_KEY_PATH=./secrets/ssl_key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Resource Limits
APP_CPU_LIMIT=2.0
APP_MEMORY_LIMIT=1G
DB_CPU_LIMIT=1.0
DB_MEMORY_LIMIT=1G
